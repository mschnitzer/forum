<%= form_tag users_login_perform_path do %>
  <div class="card">
    <div class="card-header">
      <strong><%= t(:title_login) %></strong>
    </div>
    <div class="card-body">
      <div class="form-group">
        <%= label_tag :username, t(:field_username) %>
        <%= text_field_tag :username, params[:username], class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password, t(:field_password) %>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>
    <div class="card-footer">
      <%= submit_tag t(:button_login), class: 'btn btn-sm btn-success' %>
    </div>
  </div>
<% end %>
